@model Jogo

<link rel="stylesheet" type="text/css" href="~/css/Style1.css">
<div class="col-lg-4 col-md-6 col-sm-6">
    <div class="card" style="" onclick="javascript:window.location.href='/jogos/details/@Model.Id_Jogo'">
        <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.Nome">
        <div class="card-body">
            <h5 class="card-title d-inline float-left">
                @Model.Nome
            </h5>
            <p class="card-text d-inline float-right">@Model.Preco.ToString("c")</p>
            <p class="card-text card-short-description"><i>@Model.PDescricao</i></p>
            <form asp-action="AddToShoppingCart"
                  asp-controller="CarroCompras"
                  asp-route-jogoId="@Model.Id_Jogo"
                  method="post">
                @if (!User.Identity.IsAuthenticated)
                {

                }
                else
                {
				<button class="btn btn-primary buy-now-btn float-right">Comprar</button>
                }
            </form>

        </div>
    </div>
</div>
