@model IEnumerable<IdentityRole>

@*<link rel="stylesheet" type="text/css" href="~/css/Style.css">*@
<br />
<h2>Gerir Permissões</h2>
<br />

<table class="table table-sm table-bordered table-bordered">
	<tr><th>ID</th><th></th><th></th></tr>
	@foreach (var role in Model)
	{
		<tr style="background-color: #a3b8cc;">
			<td>@role.Name</td>
			<td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Editar</a></td>
			<td>
				<form asp-action="Delete" asp-route-id="@role.Id" method="post">
					<button type="submit" class="btn btn-sm btn-danger">
						Apagar
					</button>
				</form>
			</td>
		</tr>
	}
	
	
</table>

<a asp-action="Create" class="btn btn-secondary float-right">Criar nova permissão</a>